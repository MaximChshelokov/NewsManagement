<constraint-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

                     xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping validation-mapping-1.0.xsd"

                     xmlns="http://jboss.org/xml/ns/javax/validation/mapping">
    <default-package>com.epam.model</default-package>
    <bean class="News" ignore-annotations="true">
        <field name="title">
            <constraint annotation="javax.validation.constraints.Size">
                <message>{validation.title.size}</message>
                <element name="min">2</element>
                <element name="max">60</element>
            </constraint>
        </field>
        <field name="date">
            <constraint annotation="javax.validation.constraints.Past">
                    <message>{validation.date.past}</message>
            </constraint>
        </field>
        <field name="brief">
            <constraint annotation="javax.validation.constraints.Size">
                <message>{validation.brief.size}</message>
                <element name="min">2</element>
                <element name="max">200</element>
            </constraint>
        </field>
        <field name="content">
            <constraint annotation="javax.validation.constraints.Size">
                <message>{validation.brief.size}</message>
                <element name="min">2</element>
                <element name="max">2000</element>
            </constraint>
        </field>
    </bean>
</constraint-mappings>